{
  "include": ["src/**/*.ts", "src/index.js"],
  "exclude": ["node_modules/*"],
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "@src/*": ["src/*"]
    }
  }
}
